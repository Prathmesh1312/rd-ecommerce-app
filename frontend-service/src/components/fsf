import * as React from 'react';
import AppBar from '@mui/material/AppBar';
import Toolbar from '@mui/material/Toolbar';
import Typography from '@mui/material/Typography';
import Button from '@mui/material/Button';
import Box from '@mui/material/Box';
import { Link } from 'react-router-dom';
import Menu from '@mui/material/Menu';
import MenuItem from '@mui/material/MenuItem';
import SubCategories from './Subcategories';

export default function NavBar() {
  const [anchorElMen, setAnchorElMen] = React.useState(null);
  const openMen = Boolean(anchorElMen);
  const [anchorElWomen, setAnchorElWomen] = React.useState(null);
  const openWomen = Boolean(anchorElWomen);

  

  const handleOpenMenMenu = (event) => {
    setAnchorElMen(event.currentTarget);
  };

  const handleCloseMenMenu = () => {
    setAnchorElMen(null);
  };

  const handleOpenWomenMenu = (event) => {
    setAnchorElWomen(event.currentTarget);
  };

  const handleCloseWomenMenu = () => {
    setAnchorElWomen(null);
  };

  return (
    <Box sx={{ flexGrow: 1 }}>
      <AppBar position="static">
        <Toolbar>
          <Typography variant="h6" component="div" sx={{ flexGrow: 1 }}>
            My E-commerce Site
          </Typography>

          {/* Men's Menu */}
          <Button
            id="men-button"
            aria-controls={openMen ? 'men-menu' : undefined}
            aria-haspopup={openMen ? 'true' : undefined}
            onClick={handleOpenMenMenu}
            color="inherit"
          >
            Men
          </Button>
          <Menu
            id="men-menu"
            anchorEl={anchorElMen}
            open={openMen}
            onClose={handleCloseMenMenu}
            MenuListProps={{
              'aria-labelledby': 'men-button',
            }}
          >
            <MenuItem component={Link} to="/men/clothing" onClick={handleCloseMenMenu}>
              Clothing
            </MenuItem>
            <MenuItem component={Link} to="/men/accessories" onClick={handleCloseMenMenu}>
              Accessories
            </MenuItem>
          </Menu>

          {/* Women's Menu */}
          <Button
            id="women-button"
            aria-controls={openWomen ? 'women-menu' : undefined}
            aria-haspopup={openWomen ? 'true' : undefined}
            onClick={handleOpenWomenMenu}
            color="inherit"
          >
            Women
          </Button>
          <Menu
            id="women-menu"
            anchorEl={anchorElWomen}
            open={openWomen}
            onClose={handleCloseWomenMenu}
            MenuListProps={{
              'aria-labelledby': 'women-button',
            }}
          >
            <MenuItem component={Link} to="/women/indian" onClick={handleCloseWomenMenu}>
              Indian and Western Wear
            </MenuItem>
            <MenuItem component={Link} to="/women/western" onClick={handleCloseWomenMenu}>
              Wester Wear
            </MenuItem>
            <MenuItem component={Link} to="/women/accessories" onClick={handleCloseWomenMenu}>
              Accessories
            </MenuItem>
          </Menu>

          {/* ... (About, Contact buttons) */}
        </Toolbar>
      </AppBar>
    </Box>
  );
}